<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.settings.notification.SettingsNotificationActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/settings_account_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:navigationIcon="@drawable/ic_baseline_close_24"
        app:title="Notification settings"
        app:navigationContentDescription="@string/settings_account_nav_icon_content_desc"
        />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/settings_account_frag_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.example.cmpt362project.ui.settings.notification.SettingsNotificationFragment"
        />

</LinearLayout>