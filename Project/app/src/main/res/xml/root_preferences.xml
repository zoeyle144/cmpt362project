<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Your profile">
        <Preference
            app:title="Edit user profile"
            app:icon="@drawable/ic_baseline_account_circle_24"
            app:summary="Profile picture, name, about me">
            <intent android:action="com.example.cmpt362project.ui.settings.UserProfileActivity" />
        </Preference>
    </PreferenceCategory>

    <PreferenceCategory app:title="Session">
        <Preference
            app:title="Logout"
            app:summary="Sign out of current session"
            android:key="logout">
        </Preference>
    </PreferenceCategory>

</PreferenceScreen>