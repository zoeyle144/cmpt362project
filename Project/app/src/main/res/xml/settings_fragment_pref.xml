<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Your account">
        <Preference
            app:title="Edit your profile"
            app:icon="@drawable/settings_sym_account_circle"
            app:summary="Profile picture, name, about me">
            <intent android:action="com.example.cmpt362project.ui.settings.UserProfileActivity" />
        </Preference>

        <Preference
            app:title="Edit your account"
            app:icon="@drawable/settings_sym_key"
            app:summary="Log out, e-mail, password"
            android:fragment="com.example.cmpt362project.ui.settings.account.SettingsAccountFragment"
            >
        </Preference>
    </PreferenceCategory>

    <PreferenceCategory app:title="Session">
        <Preference
            app:title="Logout"
            app:summary="Sign out of current session"
            app:icon="@drawable/settings_sym_logout"
            android:key="logout">
        </Preference>
    </PreferenceCategory>

</PreferenceScreen>