<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="FullScreenDialogStyle">
        <item name="android:windowAnimationStyle">@style/FullScreenDialogAnimation</item>
    </style>

    <style name="FullScreenDialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>


    <style name="nunito_label_on_image_title" parent="@android:style/TextAppearance.Material.Large">
        <item name="android:fontFamily">@font/nunito_sans_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">48sp</item>
    </style>

    <style name="nunito_label_on_image_subtitle" parent="@android:style/TextAppearance.Material.Medium">
        <item name="android:fontFamily">@font/nunito_sans_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>


    <style name="start_page_button" parent="Widget.MaterialComponents.Button.Icon">
        <item name="android:layout_marginStart">28dp</item>
        <item name="android:layout_marginEnd">28dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>

        <item name="android:fontFamily">@font/nunito_sans</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>

        <item name="iconGravity">textStart</item>

        <item name="shapeAppearance">@style/start_page_button_shape</item>
    </style>

    <style name="start_page_button_shape" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">16dp</item>
    </style>


    <style name="fields_layout_label_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <!-- TIL for TextInputLayout -->
    <style name="fields_layout_TIL_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <!-- TIL for TextInputEditText -->
    <style name="fields_layout_TIET_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
    </style>

</resources>